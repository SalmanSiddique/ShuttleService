<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.adis.shuttleservice.Schedule"
    android:background="@drawable/uni"
    >

    <TextView
        android:text="@string/bus_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/runtxt"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ff020202"
        android:textSize="30dp" />

    <TextView
        android:text="Orange - Stadium Long Route A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/runtxt"
        android:layout_centerHorizontal="true"
        android:textColor="#ff020202" />

    <TextView
        android:text="7:25 am - 5:45 pm "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:textColor="#ff020202" />

    <TextView
        android:text="Bus every 30 minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:textColor="#ff020202" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blue - Stadium Long Route B"
        android:layout_marginTop="15dp"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:textColor="#ff020202" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7:45 am - 5:45 pm"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:textColor="#ff020202" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bus every 30 minutes"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:id="@+id/textView9"
        android:textColor="#ff020202" />

    <TextView
        android:text="Yellow - Express Route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView10"
        android:textColor="#ff020202" />

    <TextView
        android:text="7:40 am - 5:45 pm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView10"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:textColor="#ff020202" />

    <TextView
        android:text="Bus every 20 minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:textColor="#ff020202" />


    <TextView
        android:text="Green - South Route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="#ff020202" />

    <TextView
        android:text="7:45 am â€“ 5:30 pm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView12"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:id="@+id/textView14"
        android:textColor="#ff020202" />

    <TextView
        android:text="Bus every 15 minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView14"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:textColor="#ff020202" />


    <TextView
        android:text="Red - College Park Route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true"
        android:textColor="#ff020202" />

    <TextView
        android:text="7:30 am - 9:50 am,"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView13"
        android:textColor="#ff020202" />

    <TextView
        android:text="11:30 am - 1:20 pm,"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView21"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView15"
        android:textColor="#ff020202" />


    <TextView
        android:text="4:30 pm - 6:20 pm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView17"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView21"
        android:textColor="#ff020202" />

    <TextView
        android:text="Continuous loop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView16"
        android:layout_below="@+id/textView17"
        android:textColor="#ff020202" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/redCheckBox"
        android:layout_below="@+id/textView15"
        android:layout_toLeftOf="@+id/textView2"
        android:layout_toStartOf="@+id/textView2" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/greenCheckBox"
        android:layout_toStartOf="@+id/textView7"
        android:layout_above="@+id/textView13"
        android:layout_alignLeft="@+id/redCheckBox"
        android:layout_alignStart="@+id/redCheckBox"
        android:layout_alignRight="@+id/redCheckBox"
        android:layout_alignEnd="@+id/redCheckBox" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/yellowCheckBox"
        android:layout_toStartOf="@+id/textView16"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignLeft="@+id/greenCheckBox"
        android:layout_alignStart="@+id/greenCheckBox"
        android:layout_alignRight="@+id/greenCheckBox"
        android:layout_alignEnd="@+id/greenCheckBox" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/blueCheckBox"
        android:layout_toStartOf="@+id/textView7"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/yellowCheckBox"
        android:layout_alignStart="@+id/yellowCheckBox"
        android:layout_alignRight="@+id/yellowCheckBox"
        android:layout_alignEnd="@+id/yellowCheckBox" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/orangeCheckBox"
        android:layout_toStartOf="@+id/textView2"
        android:layout_above="@+id/textView5"
        android:layout_toLeftOf="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goto Google Maps"
        android:id="@+id/viewRoutes"
        android:layout_toEndOf="@+id/redCheckBox"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/redCheckBox" />


</RelativeLayout>
